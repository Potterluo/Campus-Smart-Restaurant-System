.topCon{
  width: 90%;
  height: 160px;
  background-color: #ffffff;
  margin: 10px auto;
  overflow: hidden;
}
.topTitle{
  float: left;
  background-color: #66ccff;
  border-radius: 5px;
  font-size: 13px;
  padding: 2px;
}
.content{
  display: flex;
  flex-direction: row;
  /* 清除浮动 */
  clear: both;
}
.topLeft,.topRight{
  flex: 25%;
  display: flex;
  flex-direction: column;
  height: 135px;
  text-align: center;
  justify-content: center;
}
.topLeft text:nth-child(1),.topRight text:nth-child(1){
  font-weight: 600;
  color: gray;
  font-size: 11px;
}
.topLeft text:nth-child(2), .topRight text:nth-child(2){
  font-weight: 700;
  font-size: 16px;
  padding-top: 5px;
}

.topCenter{
  flex: 50%;
  height: 135px;
  position: relative;
}
ec-canvas {
  width: 100%;
  height: 100%;
}
.container {
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
/*  */
.chooseFood{
  width: 90%;
  height: 70px;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  position: relative;
  background-color: #ffffff;
}
.choose{
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  width: 24.5%;
}
.choose image{
  width: 40px;
  height: 40px;
  margin: 0 auto;
}
.choose text{
  font-size: 11px;
  padding-top: 3px;
}
.choose4{
  position: absolute;
  height: 70px;
  right: 0;
}
/*  */
.foodCon{
  width: 90%;
  height: auto;
  margin: 10px auto;
}
.eachTemp{
  background-color: #ffffff;
  border-radius: 10px;
}
.foodTop{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 32px;
  line-height: 32px;
  padding: 15px;
  border-bottom: solid 1px grey;
}
.foodTop text:nth-child(1){
  font-size: 18px;
  font-weight: 600;
}
.foodTopRight{
  display: flex;
  flex-direction: row;
}
.foodTopRight text:nth-child(1){
  padding-right: 10px;
  font-size: 13px;
  font-weight: 600;
  color: aqua;
}
.foodTopRight text:nth-child(2){
  font-size: 13px;
}
/*  */
.foodList{
  height: auto;
  display: flex;
  flex-direction: column;
  margin-bottom: 15px;
}
.eachList{
  display: flex;
  flex-direction: row;
  position: relative;
}
.Img{
  width: 20px;
  height: 20px;
  border-radius: 5px;
  margin: 5px;
  margin-left: 30px;
}
.listCon{
  display: flex;
  flex-direction: column;
  margin: auto 0;
  margin-left: 5px;
}
.listCon text:nth-child(1){
  font-size: 16px;
  font-weight: 600;
  color: #666666;
  margin-bottom: 3px;
}
.rowShow{
  font-size: 12px;
  color: grey;
}
.rowShow text:nth-child(1){
  font-size: 12px;
  color: grey;
  padding-right: 5px;
}
.energy{
  margin: auto 0;
  position: absolute;
  right: 36px;
  top: 20px;
  font-size: 12px;
  color: grey;
}

.btnList{
  width: 100%;
  height: 32px;
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
}
.btn1, .btn2{
  width: 40%;
  margin: 0 auto;
  padding: 5px;
  text-align: center;
  justify-content: center;
}
.btn1{
  background-color: #aaaaaa;
  border-radius: 5px;
}
.btn2{
  background-color: rgb(221, 209, 35);
  border-radius: 15px;
}
.btext{
  font-size: 11px;
  color: #cccccc;
  text-align: center;
  justify-content: center;
  margin-bottom: 15px;
}
.smallImg{
  width: 20px;
  height: 20px;
  margin: 20px;
  margin-left: 30px;
}