.title{
  width: 100%;
  height: 26px;
  background-color: #ffffff;
  line-height: 26px;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: row;
  position: relative;
}
.title picker{
  background-color: #eeeeee;
  border-radius: 20px;
  font-size: 12px;
  width: 62px;
  margin: 3px 0;
  text-align: center;
  justify-content: center;
  height: 20px;
  line-height: 20px;
}
.left, .right{
  width:0;
  height: 0;
  line-height: 0;
  font-size:0;
  border:5px solid transparent;
  position: absolute;
}
.left{
  border-right:5px solid grey;
  left: 36%;
  top: 8px;
}
.right{
  border-left:5px solid grey;
  right: 36%;
  top: 8px;
}
