/* pages/myInfo/myInfo.wxss */
.btn{
  position: absolute;
  top: 10px;
  right: 20px;
  padding: 5px;
  background-color: greenyellow;
}

.Img{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 25px;
  margin-top: 20px;
  margin-bottom: 10px;
}
image{
  width: 100%;
  height: 100%;
}

.info{
  width: 90%;
  height: auto;
  background-color: #ffffff;
  margin: 0 auto;
}

.rowInfo{
  display: flex;
  flex-direction: row;
  border: solid #aaaaaa 1px;
}
.rowInfo text{
  border-right: solid #aaaaaa 1px;
  padding: 5px; 
}
.rowInfo input{
  width: 235px;
  padding: 5px;
  padding-left: 10px;
  padding-right: 0;
  font-size: 13px;
}
