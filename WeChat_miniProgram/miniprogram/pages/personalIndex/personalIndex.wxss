.botCon{
  background-color: #ffffff;
  width: 100%;
  height: 80vh;
}
.list{
  display: flex;
  flex-direction: column;
  margin-top: 30px;
}
.listCon{
  display: flex;
  flex-direction: row;
  margin: auto 10px;
  position: relative;
  border-bottom: solid #eeeeee 1px;
  padding: 5px;
  height: 42px;
  /* line-height: 42px; */
}
.Image{
  width: 20px;
  height: 20px;
  margin: auto 0;
  padding: 3px;
}
image{
  width: 100%;
  height: 100%;
}
.botText{
  margin: auto 10px;
}
.botArrow{
  position: absolute;
  top: 8px;
  right: 10px;
  font-weight: 600;
  color: grey;
  opacity: 0.5;
  font-size: 21px;
}
