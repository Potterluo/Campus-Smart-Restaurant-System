.topCon{
  width: 100%;
  height: 100px;
  background-color: skyblue;
  position: relative;
}
/*  */
.Con{
  width: 90%;
  height: 100px;
  background-color: #ffffff;
  position: absolute;
  top: 20px;
  left: 5%;
  border-radius: 8px;
  box-shadow: slategrey;
  display: flex;
  flex-direction: row;
  border: solid #eeeeee 1px;
}
.Img{
  margin: auto 10px;
  width: 60px;
  height: 60px;
  /*
  border-radius: 50%;
  overflow: hidden; */
  border: solid #ccc 2px;
  border-radius: 50%;
  float: left;
  /* padding: 10px; */
  margin-right: 10px;
  overflow:hidden;
}
.textCon{
  margin: auto 10px;
  font-size: 21px;
  font-weight: 600;
}
.arrow{
  font-size: 18px;
  margin: auto 10px;
  
}
