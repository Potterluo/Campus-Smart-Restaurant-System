/* pages/communityIndex/communityIndex.wxss */
.header{
  width: 100%;
  height: auto;
  margin: 8px 0;
  border-bottom: solid 2px grey;
}
swiper{
  height: 180px;
}
.page-body{
  background-color: aqua;
}
.page-body swiper-item:nth-child(1){
  background-color: skyblue;
}
.page-body swiper-item:nth-child(2){
  background-color: greenyellow;
}
.main{
  background-color:#f6f6f6;
}
/* 主体 */
image{
  width: 100%;
  height: 100%;
}

.body{
  position: relative;
  width: 94%;
  height: auto;
  margin: 5px 2%;
  border: solid 1px #bbbbbb;
  border-radius: 20px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #ffffff;
}
.userInfo{
  padding: 13rpx;
}

.userImg{
  width: 70rpx;
  height: 70rpx;
  border: solid #ccc 2px;
  border-radius: 50%;
  float: left;
  /* padding: 10px; */
  margin-right: 10px;
  overflow:hidden;
}

.infoBody{
  width: 200px;
  display: flex;
  flex-direction: column;
  margin-top: 5px;
}
.userName{
  font-weight: 700;
  font-size: large;
}
.info{
  margin-top: 8px;
  display: flex;
  flex-direction: row;
}
.time{
  font-size: 8px;
  margin-right: 1em;
  height: 14px;
  line-height: 14px;
  margin-top: 3px;
}

.tag{
  font-size: 11px;
  margin-right: 1em;
  width: 4rem;
  background-color: skyblue;
  border-radius: 5px;
  padding: 2px;
  text-align: center;
}

.praise{
  position: absolute;
  width: 30px;
  height: 30px;
  float: right;
  right: 20px;
  top: 5px;
}

.comment{
  margin-left: 50px;
  margin-right: 10px;
  padding: 5rpx;
  font-size: 12px;
  margin-top: 8px;
}

.uploadImg{
  width: 250px;
  height: 150px;
  position: relative;
  left: 20%;
  margin: 10px 0;
}

.add{
  position: fixed;
  right: 20px;
  bottom: 20px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  z-index: 999;
}